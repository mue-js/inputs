{
    "compilerOptions": {
        "outDir": "./lib",
        "target": "es5",
        "jsx": "react",
        "module": "commonjs",
        "removeComments": true,
        "declaration": false,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "typeRoots": ["node_modules/@types", "src/types/modules/css.d.ts"]
    },
    "include": ["src/types/modules/css.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "lib"]
}
